@using System.Web.Optimization
@{
    ViewBag.Title = "_Footer";
}

<footer>
    <div class="footer-links">
        <a href="@Url.Action("AboutUs", "Main")">About Us</a>
        <a href="@Url.Action("ContactUs", "Main")">Contact Us</a>
        <a href="@Url.Action("Terms", "Main")">Terms of Service</a>
        <a href="@Url.Action("Privacy", "Main")">Privacy Policy</a>
    </div>
    <div class="footer-copyright">
        <p>&copy; 2025 taskore. All rights reserved.</p>
    </div>
</footer>

<style>
    /* Footer styles */
    footer {
        background-color: #f8fafc;
        padding: 2rem 0;
        margin-top: 3rem;
        border-top: 1px solid #e2e8f0;
        text-align: center;
    }

    .footer-links {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
        padding: 0 1rem;
    }

    .footer-links a {
        color: #64748b;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s ease;
    }

    .footer-links a:hover {
        color: #3b82f6;
    }

    .footer-copyright {
        color: #94a3b8;
        font-size: 0.85rem;
    }
</style>

