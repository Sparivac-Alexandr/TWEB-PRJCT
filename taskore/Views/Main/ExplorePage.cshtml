
@{
    ViewBag.Title = "Explore Projects";
}

        <body>
    @Html.Partial("_Header")
            
            <div class="container">
                <div class="projects-content">
                    <h1>Available Projects</h1>

                    <section id="project-filters">
                        <div class="filters-container">
                            <div class="search-box">
                                <input type="text" placeholder="Search projects..." class="search-input">
                                <button class="search-button">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search">
                                        <circle cx="11" cy="11" r="8"></circle>
                                        <path d="m21 21-4.3-4.3"></path>
                                    </svg>
                                </button>
                            </div>
                            <div class="filter-options">
                                <select name="category" id="category-filter" class="filter-select">
                                    <option value="">All Categories</option>
                                    <option value="web-development">Web Development</option>
                                    <option value="graphic-design">Graphic Design</option>
                                    <option value="content-writing">Content Writing</option>
                                    <option value="digital-marketing">Digital Marketing</option>
                                    <option value="mobile-apps">Mobile Apps</option>
                                </select>
                                <select name="budget" id="budget-filter" class="filter-select">
                                    <option value="">All Budgets</option>
                                    <option value="under-500">Under $500</option>
                                    <option value="500-1000">$500 - $1,000</option>
                                    <option value="1000-5000">$1,000 - $5,000</option>
                                    <option value="over-5000">Over $5,000</option>
                                </select>
                                <select name="deadline" id="deadline-filter" class="filter-select">
                                    <option value="">Any Deadline</option>
                                    <option value="urgent">Urgent (24h)</option>
                                    <option value="week">Within a week</option>
                                    <option value="month">Within a month</option>
                                    <option value="long-term">Long-term</option>
                                </select>
                            </div>
                        </div>
                    </section>

                    <section id="category-web-development" class="project-category">
                        <h2>Web Development</h2>
                        <div class="projects-grid">
                            <div class="project-card">
                                <div class="project-header">
                                    <h3>E-commerce Website Development</h3>
                                    <span class="project-budget">$3,500 - $4,500</span>
                                </div>
                                <p class="project-description">Looking for an experienced developer to build a responsive e-commerce website with payment integration and inventory management system.</p>
                                <div class="project-meta">
                                    <span class="project-deadline">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                        Deadline: 2 months
                                    </span>
                                    <span class="project-proposals">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-users">
                                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="9" cy="7" r="4"></circle>
                                            <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                        </svg>
                                        12 proposals
                                    </span>
                                </div>
                                <div class="project-skills">
                                    <span class="skill-tag">React</span>
                                    <span class="skill-tag">Node.js</span>
                                    <span class="skill-tag">MongoDB</span>
                                    <span class="skill-tag">Stripe</span>
                                </div>
                                <a href="#" class="project-apply-btn">Apply Now</a>
                            </div>

                            <div class="project-card">
                                <div class="project-header">
                                    <h3>WordPress Blog Customization</h3>
                                    <span class="project-budget">$800 - $1,200</span>
                                </div>
                                <p class="project-description">Need help customizing an existing WordPress blog with a new theme, optimizing for speed, and improving SEO performance.</p>
                                <div class="project-meta">
                                    <span class="project-deadline">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                        Deadline: 2 weeks
                                    </span>
                                    <span class="project-proposals">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-users">
                                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="9" cy="7" r="4"></circle>
                                            <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                        </svg>
                                        8 proposals
                                    </span>
                                </div>
                                <div class="project-skills">
                                    <span class="skill-tag">WordPress</span>
                                    <span class="skill-tag">PHP</span>
                                    <span class="skill-tag">SEO</span>
                                    <span class="skill-tag">Web Performance</span>
                                </div>
                                <a href="#" class="project-apply-btn">Apply Now</a>
                            </div>
                        </div>
                    </section>

                    <section id="category-graphic-design" class="project-category">
                        <h2>Graphic Design</h2>
                        <div class="projects-grid">
                            <div class="project-card">
                                <div class="project-header">
                                    <h3>Brand Identity Design</h3>
                                    <span class="project-budget">$1,500 - $2,000</span>
                                </div>
                                <p class="project-description">Looking for a creative designer to develop a complete brand identity package including logo, color palette, typography, and brand guidelines.</p>
                                <div class="project-meta">
                                    <span class="project-deadline">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                        Deadline: 3 weeks
                                    </span>
                                    <span class="project-proposals">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-users">
                                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="9" cy="7" r="4"></circle>
                                            <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                        </svg>
                                        15 proposals
                                    </span>
                                </div>
                                <div class="project-skills">
                                    <span class="skill-tag">Logo Design</span>
                                    <span class="skill-tag">Branding</span>
                                    <span class="skill-tag">Adobe Illustrator</span>
                                    <span class="skill-tag">Typography</span>
                                </div>
                                <a href="#" class="project-apply-btn">Apply Now</a>
                            </div>

                            <div class="project-card">
                                <div class="project-header">
                                    <h3>Social Media Graphics Pack</h3>
                                    <span class="project-budget">$400 - $600</span>
                                </div>
                                <p class="project-description">Need a set of 20 Instagram and Facebook post templates that match our existing brand style. Must be editable in Canva.</p>
                                <div class="project-meta">
                                    <span class="project-deadline">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                        Deadline: 1 week
                                    </span>
                                    <span class="project-proposals">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-users">
                                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="9" cy="7" r="4"></circle>
                                            <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                        </svg>
                                        6 proposals
                                    </span>
                                </div>
                                <div class="project-skills">
                                    <span class="skill-tag">Social Media</span>
                                    <span class="skill-tag">Canva</span>
                                    <span class="skill-tag">Photoshop</span>
                                    <span class="skill-tag">Marketing</span>
                                </div>
                                <a href="#" class="project-apply-btn">Apply Now</a>
                            </div>
                        </div>
                    </section>

                    <section id="category-content-writing" class="project-category">
                        <h2>Content Writing</h2>
                        <div class="projects-grid">
                            <div class="project-card">
                                <div class="project-header">
                                    <h3>Technical Blog Articles (10)</h3>
                                    <span class="project-budget">$1,000 - $1,500</span>
                                </div>
                                <p class="project-description">Looking for an experienced technical writer to create 10 in-depth articles about cloud computing technologies. Each article should be 2000+ words.</p>
                                <div class="project-meta">
                                    <span class="project-deadline">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                        Deadline: 2 months
                                    </span>
                                    <span class="project-proposals">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-users">
                                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="9" cy="7" r="4"></circle>
                                            <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                        </svg>
                                        9 proposals
                                    </span>
                                </div>
                                <div class="project-skills">
                                    <span class="skill-tag">Technical Writing</span>
                                    <span class="skill-tag">Cloud Computing</span>
                                    <span class="skill-tag">SEO</span>
                                    <span class="skill-tag">Research</span>
                                </div>
                                <a href="#" class="project-apply-btn">Apply Now</a>
                            </div>

                            <div class="project-card">
                                <div class="project-header">
                                    <h3>Product Descriptions (50)</h3>
                                    <span class="project-budget">$500 - $750</span>
                                </div>
                                <p class="project-description">Need engaging product descriptions for our e-commerce store. Each description should be 150-200 words and include relevant keywords.</p>
                                <div class="project-meta">
                                    <span class="project-deadline">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                        Deadline: 3 weeks
                                    </span>
                                    <span class="project-proposals">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-users">
                                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="9" cy="7" r="4"></circle>
                                            <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                        </svg>
                                        14 proposals
                                    </span>
                                </div>
                                <div class="project-skills">
                                    <span class="skill-tag">Copywriting</span>
                                    <span class="skill-tag">E-commerce</span>
                                    <span class="skill-tag">SEO</span>
                                    <span class="skill-tag">Marketing</span>
                                </div>
                                <a href="#" class="project-apply-btn">Apply Now</a>
                            </div>
                        </div>
                    </section>

                    <div class="load-more-container">
                        <button class="load-more-btn">
                            Load More Projects
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-down">
                                <path d="m6 9 6 6 6-6" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>

    @Html.Partial("_Footer")
</body>