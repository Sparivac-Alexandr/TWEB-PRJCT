
@{
    ViewBag.Title = "ExplorePage";
}

        <body>
            @Html.Partial("_Header")
            <div class="body-explore">
                <section class="hero">
                    <h1>Find Expert Freelancers</h1>
                    <p>Connect with skilled professionals for your next project</p>
                    <div class="hero-buttons">
                        <a href="@Url.Action("CreateProjectPage","Main")" class="btn btn-primary">Post a Project</a>
                        <a href="#" class="btn btn-secondary">Browse Projects</a>
                    </div>
                </section>

                <div class="section-separator"></div>

                <!-- Categories Section -->
                <section class="section">
                    <h2 class="section-title">Popular Categories</h2>
                    <div class="scroll-container">
                        <div class="scroll-content">
                            <div class="category-card">
                                <div class="category-icon">
                                    <svg viewBox="0 0 24 24">
                                        <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm-5 14H4v-4h11v4zm0-5H4V9h11v4zm5 5h-4V9h4v9z" />
                                    </svg>
                                </div>
                                <h3>Web Development</h3>
                                <p>Frontend, Backend, Full-Stack Development</p>
                            </div>

                            <div class="category-card">
                                <div class="category-icon">
                                    <svg viewBox="0 0 24 24">
                                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm3-8c0 1.66-1.34 3-3 3s-3-1.34-3-3 1.34-3 3-3 3 1.34 3 3z" />
                                    </svg>
                                </div>
                                <h3>Graphic Design</h3>
                                <p>Logos, Branding, Illustrations</p>
                            </div>

                            <div class="category-card">
                                <div class="category-icon">
                                    <svg viewBox="0 0 24 24">
                                        <path d="M17 1.01L7 1c-1.1 0-2 .9-2 2v18c0 1.1.9 2 2 2h10c1.1 0 2-.9 2-2V3c0-1.1-.9-1.99-2-1.99zM17 19H7V5h10v14z" />
                                    </svg>
                                </div>
                                <h3>Mobile Development</h3>
                                <p>iOS, Android, Cross-Platform Apps</p>
                            </div>

                            <div class="category-card">
                                <div class="category-icon">
                                    <svg viewBox="0 0 24 24">
                                        <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z" />
                                    </svg>
                                </div>
                                <h3>Digital Marketing</h3>
                                <p>SEO, Social Media, Content Marketing</p>
                            </div>

                            <div class="category-card">
                                <div class="category-icon">
                                    <svg viewBox="0 0 24 24">
                                        <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" />
                                    </svg>
                                </div>
                                <h3>Content Writing</h3>
                                <p>Blog Posts, Articles, Copywriting</p>
                            </div>

                            <div class="category-card">
                                <div class="category-icon">
                                    <svg viewBox="0 0 24 24">
                                        <path d="M17 10.5V7c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1v10c0 .55.45 1 1 1h12c.55 0 1-.45 1-1v-3.5l4 4v-11l-4 4z" />
                                    </svg>
                                </div>
                                <h3>Video Production</h3>
                                <p>Editing, Animation, Motion Graphics</p>
                            </div>

                            <div class="category-card">
                                <div class="category-icon">
                                    <svg viewBox="0 0 24 24">
                                        <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z" />
                                    </svg>
                                </div>
                                <h3>Data Analysis</h3>
                                <p>Business Intelligence, Analytics</p>
                            </div>

                            <div class="category-card">
                                <div class="category-icon">
                                    <svg viewBox="0 0 24 24">
                                        <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" />
                                    </svg>
                                </div>
                                <h3>Cybersecurity</h3>
                                <p>Security Assessment, Penetration Testing</p>
                            </div>

                            <div class="category-card">
                                <div class="category-icon">
                                    <svg viewBox="0 0 24 24">
                                        <path d="M21 11.5v-1c0-.8-.7-1.5-1.5-1.5H16v6h1.5v-2h1.1l.9 2H21l-.9-2.1c.5-.3.9-.8.9-1.4zm-1.5 0h-2v-1h2v1zm-13-.5h-2V9H3v6h1.5v-2.5h2V15H8V9H6.5v2zM13 9H9.5v6H13c.8 0 1.5-.7 1.5-1.5v-3c0-.8-.7-1.5-1.5-1.5zm0 4.5h-2v-3h2v3z" />
                                    </svg>
                                </div>
                                <h3>AI & Machine Learning</h3>
                                <p>ML Models, Data Science, AI Applications</p>
                            </div>
                        </div>
                    </div>
                </section>

                <div class="section-separator"></div>

                <!-- Featured Projects Section -->
                <section class="section">
                    <h2 class="section-title">Featured Projects</h2>
                    <div class="scroll-container">
                        <div class="scroll-content">
                            <div class="project-card">
                                <span class="project-tag">Web Development</span>
                                <h3 class="project-title">E-commerce Website Redesign</h3>
                                <p class="project-description">Redesign and optimize an existing e-commerce platform for better user experience and performance.</p>
                                <p class="project-budget">Budget: $2000 - $5000</p>
                            </div>

                            <div class="project-card">
                                <span class="project-tag">Graphic Design</span>
                                <h3 class="project-title">Branding for Startup</h3>
                                <p class="project-description">Create a complete branding package including logo, business cards, and social media assets.</p>
                                <p class="project-budget">Budget: $1000 - $3000</p>
                            </div>

                            <div class="project-card">
                                <span class="project-tag">Mobile Development</span>
                                <h3 class="project-title">Fitness App Development</h3>
                                <p class="project-description">Develop a cross-platform fitness app with workout tracking and nutrition planning features.</p>
                                <p class="project-budget">Budget: $5000 - $10000</p>
                            </div>

                            <div class="project-card">
                                <span class="project-tag">Digital Marketing</span>
                                <h3 class="project-title">SEO Campaign for Blog</h3>
                                <p class="project-description">Optimize blog content and structure for better search engine rankings and organic traffic.</p>
                                <p class="project-budget">Budget: $1500 - $4000</p>
                            </div>

                            <div class="project-card">
                                <span class="project-tag">Content Writing</span>
                                <h3 class="project-title">Tech Blog Articles</h3>
                                <p class="project-description">Write 10 high-quality articles on the latest trends in technology and software development.</p>
                                <p class="project-budget">Budget: $500 - $1500</p>
                            </div>

                            <div class="project-card">
                                <span class="project-tag">Video Production</span>
                                <h3 class="project-title">Corporate Video</h3>
                                <p class="project-description">Produce a 3-minute corporate video showcasing company values and services.</p>
                                <p class="project-budget">Budget: $3000 - $7000</p>
                            </div>

                            <div class="project-card">
                                <span class="project-tag">Data Analysis</span>
                                <h3 class="project-title">Sales Data Analysis</h3>
                                <p class="project-description">Analyze sales data to identify trends and provide actionable insights for business growth.</p>
                                <p class="project-budget">Budget: $2000 - $5000</p>
                            </div>

                            <div class="project-card">
                                <span class="project-tag">Cybersecurity</span>
                                <h3 class="project-title">Security Audit</h3>
                                <p class="project-description">Conduct a comprehensive security audit for a small business network.</p>
                                <p class="project-budget">Budget: $2500 - $6000</p>
                            </div>

                            <div class="project-card">
                                <span class="project-tag">AI & Machine Learning</span>
                                <h3 class="project-title">Chatbot Development</h3>
                                <p class="project-description">Develop an AI-powered chatbot for customer support on a website.</p>
                                <p class="project-budget">Budget: $4000 - $8000</p>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Features Section -->
                <section class="features">
                    <div class="container">
                        <div class="text-center">
                            <h2>Why Choose Us</h2>
                        </div>
                        <div class="grid">
                            <div class="feature-card">
                                <div class="feature-icon">
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <h3>Verified Professionals</h3>
                                <p>Work with pre-vetted freelancers who deliver quality results</p>
                            </div>
                            <div class="feature-card">
                                <div class="feature-icon">
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <h3>Fast Delivery</h3>
                                <p>Get your projects completed on time, every time</p>
                            </div>
                            <div class="feature-card">
                                <div class="feature-icon">
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path>
                                    </svg>
                                </div>
                                <h3>Competitive Rates</h3>
                                <p>Find the right talent within your budget</p>
                            </div>
                        </div>
                    </div>
                </section>
    </div>
    @Html.Partial("_Footer")
</body>