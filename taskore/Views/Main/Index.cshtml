@{
    ViewBag.Title = "taskore - Welcome!";
}
<body>


    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Welcome to taskore</h1>
            <p>Your ultimate platform for task management and productivity</p>
            <div class="hero-buttons">
                <a href="@Url.Action("SignIn", "Auth")" class="btn-primary">Sign In</a>
                <a href="@Url.Action("SignUp", "Auth")" class="btn-secondary">Sign Up</a>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="about">
        <div class="section-header">
            <h2>About taskore</h2>
            <p>Streamline your workflow and boost your productivity</p>
        </div>
        <div class="about-content">
            <p>taskore is a powerful task management application designed to help individuals and teams organize their work efficiently. Whether you're managing personal projects or collaborating with a team, Taskore provides the tools you need to stay on track and achieve your goals.</p>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features">
        <div class="section-header">
            <h2>Key Features</h2>
            <p>Discover what makes taskore the perfect solution for your productivity needs</p>
        </div>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-check-square">
