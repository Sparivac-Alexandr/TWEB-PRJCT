    .cancel-btn, .save-btn {
        padding: 0.6rem 1.25rem;
        border-radius: 6px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 0.9rem;
    }
    
    .cancel-btn {
        background-color: transparent;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }
    
    .cancel-btn:hover {
