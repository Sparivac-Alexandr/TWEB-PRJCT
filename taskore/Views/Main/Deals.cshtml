@model List<Dictionary<string, object>>

@{
    ViewBag.Title = "Deals";
}

@Html.Partial("_Header")

<div class="deals-container">
    
    
    <div class="deals-list">
        @if (Model == null || !Model.Any())
        {
            <div class="no-deals">
                <h3>No deals found</h3>
                <p>You don't have any active deals at the moment.</p>
                <a href="@Url.Action("ExplorePage", "Main")" class="explore-btn">Explore Projects</a>
            </div>
        }
        else
        {
            foreach (var deal in Model)
            {
                string status = deal["Status"].ToString();
                string statusClass = status == "In Progress" ? "status-progress" :
                                    status == "Pending Approval" ? "status-pending" :
                                    status == "In Review" ? "status-review" :
                                    status == "Completed" ? "status-completed" : "";
                
                <div class="deal-card" data-id="@deal["Id"]">
                    <div class="deal-header">
                        <div class="deal-header-left">
                            <h3 class="deal-title">@deal["Title"]</h3>
                            <div class="deal-status @statusClass">@deal["Status"]</div>
                        </div>
                        <div class="deal-header-right">
                            <div class="deal-settings">
                                <button class="settings-btn" data-id="@deal["Id"]">
                                    <i class="fas fa-cog"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="deal-content">
                        <div class="deal-parties">
                            <div class="party client">
                                <div class="party-label">Client</div>
                                <div class="party-name">@deal["ClientName"]</div>
                            </div>
                            <div class="party freelancer">
                                <div class="party-label">Freelancer</div>
                                <div class="party-name">@deal["FreelancerName"]</div>
                            </div>
                        </div>
                        
                        <div class="deal-info">
                            <div class="deal-info-item">
                                <div class="info-label">Budget</div>
                                <div class="info-value">@deal["Budget"]</div>
                            </div>
                            <div class="deal-info-item">
                                <div class="info-label">Timeline</div>
                                <div class="info-value">@deal["StartDate"] to @deal["Deadline"]</div>
                            </div>
                        </div>
                        
                        <div class="deal-progress">
                            <div class="progress-header">
                                <div class="progress-label">Project Progress</div>
                                <div class="progress-value">@deal["Progress"]%</div>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: @deal["Progress"]%;"></div>
                            </div>
                        </div>
                        
                        <div class="deal-actions">
                            <button class="action-btn edit-btn" data-id="@deal["Id"]">
                                <i class="fas fa-edit"></i>
                                <span>Edit Project</span>
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Settings Modal for Deal #@deal["Id"] -->
                <div id="settings-modal-@deal["Id"]" class="settings-modal">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3>Project Settings</h3>
                            <button class="close-modal" data-id="@deal["Id"]">&times;</button>
                        </div>
                        <div class="modal-body">
                            <div class="settings-section">
                                <h4>Project Status</h4>
                                <div class="status-options">
                                    <div class="status-option @(status == "In Progress" ? "selected" : "")" data-status="In Progress">
                                        <div class="status-dot status-progress"></div>
                                        <span>In Progress</span>
                                    </div>
                                    <div class="status-option @(status == "Pending Approval" ? "selected" : "")" data-status="Pending Approval">
                                        <div class="status-dot status-pending"></div>
                                        <span>Pending Approval</span>
                                    </div>
                                    <div class="status-option @(status == "In Review" ? "selected" : "")" data-status="In Review">
                                        <div class="status-dot status-review"></div>
                                        <span>In Review</span>
                                    </div>
                                    <div class="status-option @(status == "Completed" ? "selected" : "")" data-status="Completed">
                                        <div class="status-dot status-completed"></div>
                                        <span>Completed</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="settings-section">
                                <h4>Project Timeline</h4>
                                <div class="timeline-settings">
                                    <div class="form-group">
                                        <label>Start Date</label>
                                        <input type="date" class="form-control" value="@deal["StartDate"]" data-field="StartDate">
                                    </div>
                                    <div class="form-group">
                                        <label>Deadline</label>
                                        <input type="date" class="form-control" value="@deal["Deadline"]" data-field="Deadline">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="settings-section">
                                <h4>Progress</h4>
                                <div class="progress-settings">
                                    <div class="form-group">
                                        <label>Project Progress</label>
                                        <input type="range" min="0" max="100" value="@deal["Progress"]" class="progress-slider" data-field="Progress">
                                        <div class="progress-value">@deal["Progress"]%</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="cancel-btn" data-id="@deal["Id"]">Cancel</button>
                            <button class="save-btn" data-id="@deal["Id"]">Save Changes</button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@Html.Partial("_Footer")

