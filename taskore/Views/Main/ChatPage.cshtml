@{
    ViewBag.Title = "ChatPage";
}

<body>
    @Html.Partial("_Header")

    <!-- Background Animation -->
    <svg class="background-lines" viewBox="0 0 1000 1000" preserveAspectRatio="xMidYMid slice">
        <path class="line floating-line" d="M0,200 Q250,100 500,300 T1000,200" style="animation-delay: 0s" />
        <path class="line floating-line" d="M0,400 Q250,300 500,500 T1000,400" style="animation-delay: -2s" />
        <path class="line floating-line" d="M0,600 Q250,500 500,700 T1000,600" style="animation-delay: -4s" />
        <path class="line floating-line" d="M0,800 Q250,700 500,900 T1000,800" style="animation-delay: -6s" />
        <path class="line" d="M100,0 L200,1000" style="opacity: 0.3" />
        <path class="line" d="M300,0 L400,1000" style="opacity: 0.2" />
        <path class="line" d="M700,0 L600,1000" style="opacity: 0.3" />
        <path class="line" d="M900,0 L800,1000" style="opacity: 0.2" />
    </svg>


    <div class="container">
        <!-- Chat list sidebar -->
        <div class="chat-list-sidebar">
            <div class="chat-list-header">
                <h3>Conversations</h3>
            </div>
            <div class="chat-list">
                <div class="chat-list-item active">
                    <div class="chat-avatar">
                        <img src="/api/placeholder/40/40" alt="Stewey Pakison">
                    </div>
                    <div class="chat-info">
                        <div class="chat-name">Stewey Pakison</div>
                        <div class="chat-preview">Website Redesign Project</div>
                    </div>
                    <div class="chat-meta">
                        <span class="chat-time">10:30 AM</span>
                        <span class="unread-count">2</span>
                    </div>
                </div>
                <!-- More chat items -->
                <div class="chat-list-item">
                    <div class="chat-avatar">
                        <img src="/api/placeholder/40/40" alt="Jane Cooper">
                    </div>
                    <div class="chat-info">
                        <div class="chat-name">Jane Cooper</div>
                        <div class="chat-preview">Mobile App Development</div>
                    </div>
                    <div class="chat-meta">
                        <span class="chat-time">Yesterday</span>
                    </div>
                </div>
                <div class="chat-list-item">
                    <div class="chat-avatar">
                        <img src="/api/placeholder/40/40" alt="Robert Fox">
                    </div>
                    <div class="chat-info">
                        <div class="chat-name">Robert Fox</div>
                        <div class="chat-preview">Logo Design Project</div>
                    </div>
                    <div class="chat-meta">
                        <span class="chat-time">2d ago</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main chat area -->
        <div class="chat-container">
            <!-- Chat header with title and deal information -->
            <div class="chat-header">
                <div class="chat-title">Website Redesign Project</div>
                <div class="chat-header-actions">
                    <div class="deal-summary">
                        <div class="deal-info">
                            <span class="deal-status">Active Deal</span>
                            <span class="deal-price">$999</span>
                            <span class="deal-deadline">Due Mar 15, 2025</span>
                        </div>
                    </div>
                    <button class="create-deal-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="8" x2="12" y2="16"></line>
                            <line x1="8" y1="12" x2="16" y2="12"></line>
                        </svg>
                        Create deal
                    </button>
                </div>
            </div>

            <!-- Messages area -->
            <div class="chat-messages">
                <div class="message message-freelancer">
                    <p>Hello! Thanks for reaching out about your website redesign project. I've looked at your requirements and would be happy to help!</p>
                    <div class="message-time">10:30 AM</div>
                </div>

                <div class="message message-client">
                    <p>Great! I need a modern look that's mobile-friendly. Can you show me some examples of your previous work?</p>
                    <div class="message-time">10:32 AM</div>
                </div>

                <div class="message message-freelancer">
                    <p>Of course! Here's my portfolio with some recent projects.</p>
                    <div class="message-file">
                        <div class="file-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                <polyline points="10 9 9 9 8 9"></polyline>
                            </svg>
                        </div>
                        <div class="file-info">
                            <div class="file-name">portfolio_2025.pdf</div>
                            <div class="file-size">2.4 MB</div>
                        </div>
                        <div class="file-download">Download</div>
                    </div>
                    <div class="message-time">10:40 AM</div>
                </div>

                <div class="system-message">
                    Deal "Website Redesign" created by client • $999 • Due Mar 15, 2025
                </div>

                <div class="message message-client">
                    <p>Thanks for the portfolio. I like your style! I've created a deal with the details. Could you also share the initial mockup by next week?</p>
                    <div class="message-time">11:05 AM</div>
                </div>

                <div class="message message-freelancer">
                    <p>Thank you for creating the deal! I'll start working on it right away. And yes, I'll have the initial mockup ready by next Wednesday. Would you have any specific color preferences?</p>
                    <div class="message-time">11:08 AM</div>
                </div>

                <div class="message message-client">
                    <p>Here's our brand guide with the color palette we use.</p>
                    <div class="message-file">
                        <div class="file-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="2" y="2" width="20" height="20" rx="2" ry="2"></rect>
                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                <polyline points="21 15 16 10 5 21"></polyline>
                            </svg>
                        </div>
                        <div class="file-info">
                            <div class="file-name">brand_guidelines.png</div>
                            <div class="file-size">1.8 MB</div>
                        </div>
                        <div class="file-download">Download</div>
                    </div>
                    <div class="message-time">11:15 AM</div>
                </div>
            </div>

            <!-- Input area for new messages -->
            <div class="chat-input">
                <div class="input-container">
                    <label for="file-upload" class="input-attachment">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"></path>
                        </svg>
                    </label>
                    <input type="file" id="file-upload" hidden>
                    <input type="text" class="message-input" placeholder="Type your message...">
                    <button class="send-button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="22" y1="2" x2="11" y2="13"></line>
                            <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>



    @Html.Partial("_Footer")
</body>