@{
    ViewBag.Title = "ChatPage";
}

@Html.Partial("_Header")

<body>
    <div class="container">
        <div class="chat-layout">
            <!-- Sidebar with contacts -->
            <div class="chat-sidebar">
                <div class="sidebar-header">
                    <h2>Conversations</h2>
                    <button class="new-chat-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus">
                            <path d="M5 12h14"></path>
                            <path d="M12 5v14"></path>
                        </svg>
                    </button>
                </div>
                <div class="search-bar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.3-4.3"></path>
                    </svg>
                    <input type="text" placeholder="Search conversations">
                </div>
                <div class="contacts-list">
                    <div class="contact-item active">
                        <img src="/api/placeholder/40/40" alt="Alex Marino">
                        <div class="contact-info">
                            <h3>Alex Marino</h3>
                            <p>Logo Design Project</p>
                        </div>
                        <span class="unread-badge">3</span>
                    </div>
                    <div class="contact-item">
                        <img src="/api/placeholder/40/40" alt="Sarah Johnson">
                        <div class="contact-info">
                            <h3>Sarah Johnson</h3>
                            <p>Website Development</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <img src="/api/placeholder/40/40" alt="Michael Smith">
                        <div class="contact-info">
                            <h3>Michael Smith</h3>
                            <p>Content Writing</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <img src="/api/placeholder/40/40" alt="Emma Davis">
                        <div class="contact-info">
                            <h3>Emma Davis</h3>
                            <p>Mobile App Design</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Chat main area -->
            <div class="chat-main">
                <!-- Chat header -->
                <div class="chat-header">
                    <div class="chat-user-info">
                        <img src="/api/placeholder/40/40" alt="Alex Marino">
                        <div>
                            <h2>Alex Marino</h2>
                            <p>Logo Design Project</p>
                        </div>
                    </div>
                    <div class="chat-actions">
                        <button class="chat-action-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                            </svg>
                        </button>
                        <button class="chat-action-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-video">
                                <path d="m22 8-6 4 6 4V8Z"></path>
                                <rect width="14" height="12" x="2" y="6" rx="2" ry="2"></rect>
                            </svg>
                        </button>
                        <button class="chat-action-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-more-vertical">
                                <circle cx="12" cy="12" r="1"></circle>
                                <circle cx="12" cy="5" r="1"></circle>
                                <circle cx="12" cy="19" r="1"></circle>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Chat messages area -->
                <div class="chat-messages">
                    <div class="date-divider">
                        <span>March 5, 2025</span>
                    </div>

                    <div class="message received">
                        <img src="/api/placeholder/30/30" alt="Alex" class="message-avatar">
                        <div class="message-content">
                            <p>Hi there! I'm interested in discussing the logo design project for my new startup.</p>
                            <span class="message-time">10:15 AM</span>
                        </div>
                    </div>

                    <div class="message sent">
                        <div class="message-content">
                            <p>Hello Alex! I'd be happy to discuss your logo design project. Could you share more details about your startup and what you're looking for?</p>
                            <span class="message-time">10:18 AM</span>
                        </div>
                    </div>

                    <div class="message received">
                        <img src="/api/placeholder/30/30" alt="Alex" class="message-avatar">
                        <div class="message-content">
                            <p>Sure! We're launching a tech startup focused on sustainable energy solutions. Our brand colors are green and blue, and we want something modern but approachable.</p>
                            <span class="message-time">10:22 AM</span>
                        </div>
                    </div>

                    <div class="message received">
                        <img src="/api/placeholder/30/30" alt="Alex" class="message-avatar">
                        <div class="message-content">
                            <div class="file-attachment">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-file">
                                    <path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"></path>
                                    <path d="M14 2v4a2 2 0 0 0 2 2h4"></path>
                                </svg>
                                <div class="file-info">
                                    <p class="file-name">brand_guidelines.pdf</p>
                                    <p class="file-size">2.4 MB</p>
                                </div>
                                <button class="download-btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-download">
                                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                        <polyline points="7 10 12 15 17 10"></polyline>
                                        <line x1="12" x2="12" y1="15" y2="3"></line>
                                    </svg>
                                </button>
                            </div>
                            <p>Here are our brand guidelines for reference.</p>
                            <span class="message-time">10:25 AM</span>
                        </div>
                    </div>

                    <div class="message sent">
                        <div class="message-content">
                            <p>Thanks for the details and guidelines! Based on your requirements, I can create a few logo concepts. Would you like to discuss pricing and timeline?</p>
                            <span class="message-time">10:30 AM</span>
                        </div>
                    </div>

                    <div class="message received">
                        <img src="/api/placeholder/30/30" alt="Alex" class="message-avatar">
                        <div class="message-content">
                            <p>Yes, that would be great. What's your typical pricing structure for logo design?</p>
                            <span class="message-time">10:32 AM</span>
                        </div>
                    </div>

                    <div class="message sent">
                        <div class="message-content">
                            <div class="deal-proposal">
                                <div class="deal-header">
                                    <h3>Logo Design Package</h3>
                                    <span class="deal-badge">Proposal</span>
                                </div>
                                <div class="deal-details">
                                    <div class="deal-item">
                                        <span>Amount:</span>
                                        <strong>$950</strong>
                                    </div>
                                    <div class="deal-item">
                                        <span>Timeline:</span>
                                        <strong>14 days</strong>
                                    </div>
                                    <div class="deal-item">
                                        <span>Revisions:</span>
                                        <strong>Up to 3</strong>
                                    </div>
                                    <div class="deal-item">
                                        <span>Deliverables:</span>
                                        <strong>3 concepts, final logo in all formats</strong>
                                    </div>
                                </div>
                                <div class="deal-actions">
                                    <button class="deal-accept-btn">Accept Proposal</button>
                                    <button class="deal-counter-btn">Counter Offer</button>
                                </div>
                            </div>
                            <span class="message-time">10:36 AM</span>
                        </div>
                    </div>
                </div>

                <!-- Chat input area -->
                <div class="chat-input-area">
                    <button class="attach-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-paperclip">
                            <path d="m21.44 11.05-9.19 9.19a6 6 0 0 1-8.49-8.49l8.57-8.57A4 4 0 1 1 18 8.84l-8.59 8.57a2 2 0 0 1-2.83-2.83l8.49-8.48"></path>
                        </svg>
                    </button>
                    <div class="quick-actions">
                        <button class="quick-action-btn" id="deal-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-briefcase">
                                <rect width="20" height="14" x="2" y="7" rx="2" ry="2"></rect>
                                <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                            </svg>
                            <span>Deal</span>
                        </button>
                        <button class="quick-action-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar">
                                <rect width="18" height="18" x="3" y="4" rx="2" ry="2"></rect>
                                <line x1="16" x2="16" y1="2" y2="6"></line>
                                <line x1="8" x2="8" y1="2" y2="6"></line>
                                <line x1="3" x2="21" y1="10" y2="10"></line>
                            </svg>
                            <span>Schedule</span>
                        </button>
                        <button class="quick-action-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-image">
                                <rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect>
                                <circle cx="9" cy="9" r="2"></circle>
                                <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
                            </svg>
                            <span>Media</span>
                        </button>
                    </div>
                    <input type="text" placeholder="Type your message...">
                    <button class="send-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-send">
                            <path d="m22 2-7 20-4-9-9-4Z"></path>
                            <path d="M22 2 11 13"></path>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Deal panel -->
            <div class="deal-panel">
                <div class="deal-panel-header">
                    <h2>Project Details</h2>
                    <button class="close-panel-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-x">
                            <path d="M18 6 6 18"></path>
                            <path d="m6 6 12 12"></path>
                        </svg>
                    </button>
                </div>
                <div class="deal-panel-content">
                    <div class="deal-status">
                        <h3>Logo Design Project</h3>
                        <span class="status-badge pending">Pending</span>
                    </div>

                    <div class="deal-section">
                        <h4>Project Terms</h4>
                        <div class="deal-info-item">
                            <span>Budget:</span>
                            <strong>$950</strong>
                        </div>
                        <div class="deal-info-item">
                            <span>Timeline:</span>
                            <strong>14 days</strong>
                        </div>
                        <div class="deal-info-item">
                            <span>Payment Terms:</span>
                            <strong>50% upfront, 50% upon completion</strong>
                        </div>
                    </div>

                    <div class="deal-section">
                        <h4>Deliverables</h4>
                        <ul class="deliverables-list">
                            <li>3 initial logo concepts</li>
                            <li>Up to 3 revision rounds</li>
                            <li>Final logo in vector format (AI, EPS, SVG)</li>
                            <li>PNG and JPG formats in various sizes</li>
                            <li>Brand style guide</li>
                        </ul>
                    </div>

                    <div class="deal-section">
                        <h4>Timeline</h4>
                        <div class="timeline-item">
                            <div class="timeline-date">March 8</div>
                            <div class="timeline-content">Initial concepts presentation</div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-date">March 15</div>
                            <div class="timeline-content">Revision round completed</div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-date">March 19</div>
                            <div class="timeline-content">Final deliverables</div>
                        </div>
                    </div>

                    <div class="deal-section">
                        <h4>Attachments</h4>
                        <div class="attachment-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-file-text">
                                <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" x2="8" y1="13" y2="13"></line>
                                <line x1="16" x2="8" y1="17" y2="17"></line>
                                <line x1="10" x2="8" y1="9" y2="9"></line>
                            </svg>
                            <div class="attachment-info">
                                <p>contract_logo_design.pdf</p>
                                <span>342 KB</span>
                            </div>
                            <button class="download-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-download">
                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                    <polyline points="7 10 12 15 17 10"></polyline>
                                    <line x1="12" x2="12" y1="15" y2="3"></line>
                                </svg>
                            </button>
                        </div>
                        <div class="attachment-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-file">
                                <path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"></path>
                                <path d="M14 2v4a2 2 0 0 0 2 2h4"></path>
                            </svg>
                            <div class="attachment-info">
                                <p>brand_guidelines.pdf</p>
                                <span>2.4 MB</span>
                            </div>
                            <button class="download-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-download">
                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                    <polyline points="7 10 12 15 17 10"></polyline>
                                    <line x1="12" x2="12" y1="15" y2="3"></line>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div class="deal-actions">
                        <button class="primary-action-btn">Accept Deal</button>
                        <button class="secondary-action-btn">Make Counter Offer</button>
                    </div>
                </div>
            </div>
        </div>
    </div>



</body>

@Html.Partial("_Footer")