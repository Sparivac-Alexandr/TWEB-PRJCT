@{
    ViewBag.Title = "News & Updates";
}

<body>
    @Html.Partial("_Header")

    <div class="projects-container">
        <div class="projects-header">
            <div class="projects-title">
                <h1>News & Updates</h1>
            </div>
           
        </div>

        <div class="projects-body">
            <div class="projects-list">
                @foreach (var news in Model)
                {
                    var priority = news["Priority"].ToString();
                    var priorityClass = priority == "High" ? "high-priority" : (priority == "Medium" ? "medium-priority" : "");
                    
                    <div class="project-item @priorityClass">
                        <div class="project-header">
                            <div class="project-title">@news["Title"]</div>
                            <div class="project-date">Published on: @news["PublishDate"]</div>
                        </div>
                        <div class="project-details">
                            <div class="project-description">
                                <p>@news["Content"]</p>
                            </div>
                            <div class="project-meta">
                                <div class="meta-item">
                                    <i class="fas fa-tag"></i>
                                    <span>@news["Category"]</span>
                                </div>
                                @if (priority == "High")
                                {
                                    <div class="meta-item priority-indicator">
                                        <i class="fas fa-exclamation-circle"></i>
                                        <span>Important</span>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="project-client">
                            <div class="client-label">By:</div>
                            <div class="client-name">@news["Author"]</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    @Html.Partial("_Footer")
</body>

<style>
    /* Projects Page Styles */
    .projects-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .projects-header {
        margin-bottom: 2rem;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
    }

