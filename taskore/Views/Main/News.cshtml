    }

    .project-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #0f172a;
    }

    .project-date {
        font-size: 0.875rem;
        color: #64748b;
    }

    .project-details {
        margin-bottom: 1rem;
    }

    .project-description {
        color: #475569;
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .project-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 0.5rem;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: #64748b;
        background-color: #f8fafc;
        padding: 0.35rem 0.75rem;
        border-radius: 4px;
    }
    
    .priority-indicator {
        background-color: #fef2f2;
        color: #ef4444;
    }

    .project-client {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: #64748b;
        margin-bottom: 0.5rem;
    }

    .client-label {
        font-weight: 600;
    }
</style> 