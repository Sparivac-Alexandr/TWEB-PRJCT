
@{
    ViewBag.Title = "SignUp";
}

<body>
    <!-- Background Animation -->
    <svg class="background-lines" viewBox="0 0 1000 1000" preserveAspectRatio="xMidYMid slice">
        <path class="line floating-line" d="M0,200 Q250,100 500,300 T1000,200" style="animation-delay: 0s" />
        <path class="line floating-line" d="M0,400 Q250,300 500,500 T1000,400" style="animation-delay: -2s" />
        <path class="line floating-line" d="M0,600 Q250,500 500,700 T1000,600" style="animation-delay: -4s" />
        <path class="line floating-line" d="M0,800 Q250,700 500,900 T1000,800" style="animation-delay: -6s" />
        <path class="line" d="M100,0 L200,1000" style="opacity: 0.3" />
        <path class="line" d="M300,0 L400,1000" style="opacity: 0.2" />
        <path class="line" d="M700,0 L600,1000" style="opacity: 0.3" />
        <path class="line" d="M900,0 L800,1000" style="opacity: 0.2" />
    </svg>
    <div class="auth-right">
        <div class="auth-form-container">
            <div class="auth-header">
                <h1>taskore. //</h1>
                <p>Please fill in your information</p>
            </div>
            <form id="signup-form">
                <div class="input-group">
                    <input type="email" placeholder="Email address" required>
                </div>
                <div class="input-group">
                    <input type="text" placeholder="First Name" required>
                </div>
                <div class="input-group">
                    <input type="text" placeholder="Last Name" required>
                </div>
                <div class="input-group">
                    <input type="password" id="password1" placeholder="Password" required>
                    <span class="password-toggle" onclick="togglePassword('password1')">Show</span>
                </div>
                <div class="input-group">
                    <input type="password" id="password2" placeholder="Confirm Password" required>
                    <span class="password-toggle" onclick="togglePassword('password2')">Show</span>
                </div>
                <div class="input-group">
                    <select required>
                        <option value="" disabled selected>Select user type</option>
                        <option value="employer">Employer</option>
                        <option value="customer">Customer</option>
                    </select>
                </div>
                <button type="submit" class="submit-button">Create Account</button>
                <div class="back-link">
                    Already have an account? <a href="@Url.Action("SignIn", "Auth")" onclick="showPage('login')">Sign in</a>
                </div>
            </form>
        </div>
    </div>
    </div>
    @Html.Partial("_Footer")
</body>

