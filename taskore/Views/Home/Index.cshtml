            pointer-events: none;
        }

        .cta-container {
            max-width: 900px;
            position: relative;
            z-index: 1;
        }

        .cta-section h2 {
            font-size: 2.8rem;
            margin-bottom: 1.5rem;
            color: #0f172a;
            font-weight: 800;
            line-height: 1.2;
        }

        .cta-section p {
            margin-bottom: 2.5rem;
            color: #475569;
            font-size: 1.2rem;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
