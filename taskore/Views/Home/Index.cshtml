        .author-avatar img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            margin-right: 1.25rem;
            object-fit: cover;
        }

        .author-details h4 {
            margin: 0;
            font-size: 1.2rem;
            color: #1e293b;
        }

        .author-details p {
            margin: 0.25rem 0 0;
            color: #64748b;
            font-size: 1rem;
            font-weight: 500;
        }

